# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=your_auth_secret_here

# Google Generative AI API Key (required for Gemini models)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# Instructions to create a Vercel Blob Store here: https://vercel.com/docs/vercel-blob
BLOB_READ_WRITE_TOKEN=your_blob_token_here

# Instructions to create a PostgreSQL database here: https://vercel.com/docs/postgres
POSTGRES_URL=postgresql://user:password@host/database?sslmode=require

# Instructions to create a Redis store here:
# https://vercel.com/docs/redis
REDIS_URL=rediss://default:password@host:port

# Cronos Wallet Private Keys (for payment management)
# Generate a new wallet or use an existing one
CRONOS_TESTNET_PRIVATE_KEY=0x_your_testnet_private_key_here
CRONOS_MAINNET_PRIVATE_KEY=0x_your_mainnet_private_key_here

# Developer account private key for contract deployment
CRONOS_DEVELOPER_PRIVATE_KEY=0x_your_developer_private_key_here

# USDC Contract Addresses on Cronos
CRONOS_USDC_MAINNET_ADDRESS=0xf951eC28187D9E5Ca673Da8FE6757E6f0Be5F77C
CRONOS_USDC_TESTNET_ADDRESS=0xc01efAaF7C5C61bEbFAeb358E1161b537b8bC0e0

# x402 Resource Service URL
RESOURCE_SERVICE_URL=https://your-x402-server.vercel.app
